<h1>Editing Book</h1>
<%= form_for(@book, url:"/books/#{@book.id}") do |f| %>

    <% if @book.errors.any? %>
    <div id="error_explanation">
        <h2><%= pluralize(@book.errors.count, "error") %> prohibited this article from being saved:</h2>
        <ul>
        <% @book.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
    </div>
    <% end %>

    <div class="field">
        <%= f.label :title, :class => 'book_title' %>
        <%= f.text_field :title, :class => 'book_title' %>
    </div>
    <div class="field">
        <%= f.label :body, :class => 'book_body' %>
        <%= f.text_area :body, :class => 'book_body' %>
    </div>
    <div class="actions">
        <%= f.submit 'Update Book' %>
    </div>
    <%= link_to "Show", book_path(@book.id), :class => "show_#{@book.id}" %> | <%= link_to "Back", books_path, :class => "back" %>
<% end %>