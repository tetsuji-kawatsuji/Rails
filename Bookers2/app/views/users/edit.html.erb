<h2>User info</h2>

<%= form_for(@user) do |f| %>

  <div class="field">
    <%= f.label :Name %>
    <%= f.text_field :name, id: :user_name %>
  </div>

  <div class="form-group has-icon">
    <%= f.label :Image %>
      <label class="control-label sr-only" for="inputEmail">ProfileImage</label>
      <%= f.attachment_field :profile_image, placeholder: "Image", class: "user-edit-form" %>
  </div>

  <div class="field">
    <%= f.label :Introduction %>
    <%= f.text_area :introduction, id: :user_introduction %>
  </div>

  <div class="actions">
    <%= f.submit "Update User" %>
  </div>
<% end %>
