
  <div class="container">
    <div class="row">
      <div class="col-lg-4">
        <p id="notice"><%= notice %></p>
        <h2>User info</h2>
        <%= link_to "Edit", edit_user_path(@user.id) %>
        <h2>New book</h2>
        <!-- form_for部分 -->
        <%= form_for(@book, url: '/books') do |f| %>

            <% if @book.errors.any? %>
            <div id="error_explanation">
                <h2><%= pluralize(@book.errors.count, "error") %> prohibited this article from being saved:</h2>
                <ul>
                <% @book.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
                </ul>
            </div>
            <% end %>
            <div class="field">
                <%= f.label :title, :class => 'book_title' %>
                <%= f.text_field :title, :class => 'book_title' %>
            </div>
            <div class="field">
                <%= f.label :opinion, :class => 'opinion_body' %>
                <%= f.text_area :opinion, :class => 'opinion_body' %>
            </div>
            <div class="actions">
                <%= f.submit 'Create Book' %>
            </div>

        <% end %>
      </div>
      <div class="col-lg-8">
        <h2>Users</h2>
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td><%= book.title %></td>
                <td><%= book.opinion %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
