
  <div class="container">
    <div class="row">

      <%= render :partial => "sidebar" %>

      <div class="col-xs-9">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
              <tr>
                <% if book.user_id = @user.id %>
                  <td><%= book.title %></td>
                  <td><%= book.body %></td>
                  <td><%= book.user_id %></td>
                  <td><%= params[:id] %></td>
                  <td><%= User.find_by(id: book.user_id).id %></td>
                  <td><%= @user.id %></td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
