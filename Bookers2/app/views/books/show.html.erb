
  <div class="container">
    <div class="row">

      <%= render :partial => "users/sidebar" %>

      <div class="col-xs-9">

        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th><h2>Book detail</h2></th>
              <th></th>
              <th></th>
              <th></th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td><%= attachment_image_tag @user, :profile_image, :fill, 80, 80, class: "pull-left profile-thumb", fallback: "no_image.jpg" , size:'80x80' %></td>
                <td><%= book.title %></td>
                <td><%= book.body %></td>
                <% if book.user_id == @user.id %>
                  <td><%= link_to "Edit", edit_book_path(book.id), :class => "edit_#{book.id} btn btn-success"  %></td>
                  <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are You Sure?", :class => "destroy_#{book.id} btn btn-danger" %></td>
                <% else %>
                  <td></td>
                  <td></td>
                <% end %>
              </tr>
              <tr>
                <td><%= link_to User.find_by(id: book.user_id).name, user_path(User.find_by(id: book.user_id).id), :class => "show_#{@user.id}" %></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
