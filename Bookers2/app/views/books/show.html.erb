
  <div class="container">
    <div class="row">
      <div class="col-lg-4">
        <p id="notice"><%= notice %></p>
        <h2>User info</h2>
        <%= attachment_image_tag @user, :profile_image, :fill, 30, 30, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%><br>
        <%= link_to "Edit", edit_user_path(@user.id) %><br>
        <h2>New book</h2>
        <!-- form_for部分 -->
        <%= form_for(@book, url: '/books') do |f| %>

            <% if @book.errors.any? %>
            <div id="error_explanation">
                <h2><%= pluralize(@book.errors.count, "error") %> prohibited this article from being saved:</h2>
                <ul>
                <% @book.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
                </ul>
            </div>
            <% end %>
            <div class="field">
                <%= f.label :title, :class => 'book_title' %><br>
                <%= f.text_field :title, :class => 'book_title' %>
            </div>
            <div class="field">
                <%= f.label :opinion, :class => 'book_opinion' %><br>
                <%= f.text_area :opinion, :class => 'book_opinion' %>
            </div>
            <div class="actions">
                <%= f.submit 'Create Book' %>
            </div>

          <% end %>
      </div>
      <div class="col-lg-8">
        <h2>Books</h2>
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Title</th>
              <th>Opinion</th>
              <th></th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td><%= book.title %></td>
                <td><%= book.opinion %></td>
                <td><%= link_to "Show", book_path(book.id), :class => "show_#{book.id}" %></td>
                <td><%= link_to "Edit", edit_book_path(book.id), :class => "edit_#{book.id}"  %></td>
                <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are You Sure?", :class => "destroy_#{book.id}" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
