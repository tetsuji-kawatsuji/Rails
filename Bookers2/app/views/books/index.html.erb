
  <div class="container">

    <%= render :partial => "bookerr" %>

    <div class="row">

      <%= render :partial => "users/sidebar" %>

      <div class="col-xs-9">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
          </thead>

          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td><%= attachment_image_tag @user, :profile_image, :fill, 40, 40, class: "pull-left profile-thumb", fallback: "no_image.jpg" , size:'40x40' %></td>
                <td><%= link_to book.title, book_path(book.id), :class => "show_#{book.id}" %></td>
                <td><%= book.body %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

<br>
