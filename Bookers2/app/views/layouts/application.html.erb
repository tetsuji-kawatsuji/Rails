<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>
  <body>

    <header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbarEexample">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <strong>Bookers</strong>
        </div>

        <div class="nav navbar-nav navbar-right" >
          <ul class="nav navbar-nav">
              <% if user_signed_in? %>
                <li><%= link_to ' Home', "/", class: "glyphicon glyphicon-home home" %></li>
                <li><%= link_to ' Users', users_path, class: "glyphicon glyphicon-user user" %></li>
                <li><%= link_to ' Books', books_path, class: "glyphicon glyphicon-book book" %></li>
                <li><%= link_to " logout", destroy_user_session_path, method: :delete, class: "glyphicon glyphicon-log-out logout" %></li>
              <% else %>
                <li><%= link_to ' Home', "/", class: "glyphicon glyphicon-home home" %></li>
                <li><%= link_to ' About', "/home/about", class: "glyphicon glyphicon-link about" %></li>
                <li><%= link_to " sign up", new_user_registration_path, class: "glyphicon glyphicon-edit sign_up" %></li>
                <li><%= link_to " login", new_user_session_path, class: "glyphicon glyphicon-log-in sign_in" %></li>
              <% end %>
          </ul>
        </div>
      </div>
    </header>

    <div class="container">
      <p id="notice"><%= notice %></p>

      <%= yield %>

    </div>
  </body>

  <footer>
      <div class="container">
          <div class="row">
    	      <div class="col-xs-3 col-xs-offset-9">
    		      <p>CopyRight Infratop.inc</p>
    	      </div>
          </div>
      </div>
  </footer>

</html>
